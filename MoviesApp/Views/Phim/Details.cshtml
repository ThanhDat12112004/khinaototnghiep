@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
    <script>
        // Initialize AOS (Animate On Scroll)
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });
        
        // Initialize Swiper for episodes
        const episodesSwiper = new Swiper('.episodesSwiper', {
            slidesPerView: 1,
            spaceBetween: 20,
            loop: false,
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            breakpoints: {
                576: {
                    slidesPerView: 2,
                },
                768: {
                    slidesPerView: 3,
                },
                992: {
                    slidesPerView: 4,
                },
                1200: {
                    slidesPerView: 5,
                }
            }
        });
        
        $(document).ready(function() {
            // Progress bar on scroll
            $(window).scroll(function() {
                const scroll = $(window).scrollTop();
                const height = $(document).height() - $(window).height();
                const scrolled = (scroll / height) * 100;
                $('#progressBar').css('width', scrolled + '%');
            });
            
            // Back to top button
            $('#backToTop').click(function() {
                $('html, body').animate({scrollTop: 0}, 800);
            });
            
            // Fullscreen toggle
            $('#toggleFullscreen').click(function() {
                if (!document.fullscreenElement) {
                    document.documentElement.requestFullscreen();
                    $(this).find('i').removeClass('fa-expand').addClass('fa-compress');
                } else {
                    document.exitFullscreen();
                    $(this).find('i').removeClass('fa-compress').addClass('fa-expand');
                }
            });
            
            // Share functionality
            $('#shareMovie, .btn-share-enhanced').click(function() {
                if (navigator.share) {
                    navigator.share({
                        title: '@Model?.TenPhim',
                        text: 'Xem phim hay trên CCFilm: @Model?.TenPhim',
                        url: window.location.href
                    });
                } else {
                    copyToClipboard(window.location.href);
                    showNotification('Đã sao chép link phim vào clipboard!', 'success');
                }
            });
            
            // Wishlist functionality
            $('.btn-wishlist-enhanced').click(function() {
                const btn = $(this);
                const icon = btn.find('i');
                const text = btn.find('span');
                const movieId = btn.data('movie-id');
                
                if (icon.hasClass('far')) {
                    icon.removeClass('far').addClass('fas');
                    text.text('Đã thích');
                    btn.css('background', 'linear-gradient(45deg, #e91e63, #ad1457)');
                    addToWishlist(movieId);
                    showNotification('Đã thêm vào danh sách yêu thích!', 'success');
                } else {
                    icon.removeClass('fas').addClass('far');
                    text.text('Yêu thích');
                    btn.css('background', 'linear-gradient(45deg, #e91e63, #9c27b0)');
                    removeFromWishlist(movieId);
                    showNotification('Đã xóa khỏi danh sách yêu thích!', 'info');
                }
            });
            
            // Star rating functionality
            $('.star-rating .fa-star').click(function() {
                const rating = $(this).data('rating');
                $('.star-rating .fa-star').each(function(index) {
                    if (index < rating) {
                        $(this).removeClass('text-muted').addClass('text-warning');
                    } else {
                        $(this).removeClass('text-warning').addClass('text-muted');
                    }
                });
            });
            
            // Rating stars hover effect
            $('.rating-stars .star').hover(
                function() {
                    $(this).addClass('text-warning');
                },
                function() {
                    if (!$(this).hasClass('active')) {
                        $(this).removeClass('text-warning');
                    }
                }
            );
            
            // Load related movies
            loadRelatedMovies('@Model?.MaTL', '@Model?.MaPhim');
            
            // Auto-update view count
            updateViewCount();
            
            // Smooth scroll for anchor links
            $('a[href^="#"]').on('click', function(event) {
                const target = $(this.getAttribute('href'));
                if (target.length) {
                    event.preventDefault();
                    $('html, body').stop().animate({
                        scrollTop: target.offset().top - 100
                    }, 1000);
                }
            });
            
            // Parallax effect for hero background
            $(window).scroll(function() {
                const scroll = $(window).scrollTop();
                $('.hero-background').css('transform', `translateY(${scroll * 0.5}px)`);
            });
            
            // Lazy loading for images
            const imageObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const img = entry.target;
                        img.src = img.dataset.src;
                        img.classList.remove('lazy');
                        imageObserver.unobserve(img);
                    }
                });
            });
            
            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
        
        // Download trailer function
        function downloadTrailer() {
            showNotification('Chức năng tải về đang được phát triển!', 'info');
        }
        
        // Add to wishlist function
        function addToWishlist(movieId) {
            $.ajax({
                url: '/api/wishlist/add',
                method: 'POST',
                data: { movieId: movieId },
                success: function(response) {
                    console.log('Added to wishlist:', movieId);
                },
                error: function() {
                    showNotification('Có lỗi xảy ra khi thêm vào danh sách yêu thích!', 'error');
                }
            });
        }
        
        // Remove from wishlist function
        function removeFromWishlist(movieId) {
            $.ajax({
                url: '/api/wishlist/remove',
                method: 'DELETE',
                data: { movieId: movieId },
                success: function(response) {
                    console.log('Removed from wishlist:', movieId);
                },
                error: function() {
                    showNotification('Có lỗi xảy ra khi xóa khỏi danh sách yêu thích!', 'error');
                }
            });
        }
        
        // Load related movies function
        function loadRelatedMovies(genreId, currentMovieId) {
            setTimeout(() => {
                const mockRelatedMovies = [
                    {
                        maPhim: 'movie1',
                        tenPhim: 'Phim hành động 1',
                        anhPhim: 'https://via.placeholder.com/200x300/333/fff?text=Movie+1',
                        namPhatHanh: 2023,
                        diemImdb: 8.5
                    },
                    {
                        maPhim: 'movie2',
                        tenPhim: 'Phim hành động 2',
                        anhPhim: 'https://via.placeholder.com/200x300/333/fff?text=Movie+2',
                        namPhatHanh: 2023,
                        diemImdb: 7.8
                    },
                    {
                        maPhim: 'movie3',
                        tenPhim: 'Phim hành động 3',
                        anhPhim: 'https://via.placeholder.com/200x300/333/fff?text=Movie+3',
                        namPhatHanh: 2022,
                        diemImdb: 9.1
                    }
                ];
                renderRelatedMovies(mockRelatedMovies);
            }, 1500);
        }
        
        // Render related movies function
        function renderRelatedMovies(movies) {
            const container = $('#relatedMovies');
            container.empty();
            
            if (movies.length === 0) {
                container.html('<div class="col-12 text-center"><p class="text-white">Không có phim liên quan</p></div>');
                return;
            }
            
            movies.forEach((movie, index) => {
                const movieCard = `
                    <div class="col-lg-4 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="${index * 100}">
                        <div class="card bg-dark text-white h-100" style="transition: transform 0.3s;">
                            <div class="position-relative overflow-hidden">
                                <img src="${movie.anhPhim}" class="card-img-top" alt="${movie.tenPhim}" style="height: 300px; object-fit: cover;">
                                <div class="card-img-overlay d-flex align-items-center justify-content-center opacity-0" style="transition: opacity 0.3s; background: rgba(0,0,0,0.7);">
                                    <a href="/Phim/Details/${movie.maPhim}" class="btn btn-primary">
                                        <i class="fas fa-play me-2"></i>Xem phim
                                    </a>
                                </div>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">${movie.tenPhim}</h5>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">${movie.namPhatHanh}</small>
                                    <div class="text-warning">
                                        <i class="fas fa-star"></i>
                                        <span>${movie.diemImdb}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                container.append(movieCard);
            });
            
            // Add hover effects
            $('#relatedMovies .card').hover(
                function() {
                    $(this).css('transform', 'translateY(-10px)');
                    $(this).find('.card-img-overlay').removeClass('opacity-0');
                },
                function() {
                    $(this).css('transform', 'translateY(0)');
                    $(this).find('.card-img-overlay').addClass('opacity-0');
                }
            );
        }
        
        // Update view count function
        function updateViewCount() {
            const counts = ['1.2K', '1.3K', '1.4K', '1.5K'];
            let index = 0;
            
            setInterval(() => {
                $('#viewCount').text(counts[index]);
                index = (index + 1) % counts.length;
            }, 5000);
        }
        
        // Copy to clipboard function
        function copyToClipboard(text) {
            if (navigator.clipboard) {
                navigator.clipboard.writeText(text);
            } else {
                const textArea = document.createElement('textarea');
                textArea.value = text;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
            }
        }
        
        // Enhanced notification system
        function showNotification(message, type = 'info') {
            const typeColors = {
                success: '#4caf50',
                error: '#f44336',
                warning: '#ff9800',
                info: '#2196f3'
            };
            
            const typeIcons = {
                success: 'fa-check-circle',
                error: 'fa-exclamation-circle',
                warning: 'fa-exclamation-triangle',
                info: 'fa-info-circle'
            };
            
            const notification = $(`
                <div class="notification" style="
                    position: fixed;
                    top: 20px;
                    right: 20px;
                    background: ${typeColors[type]};
                    color: white;
                    padding: 15px 20px;
                    border-radius: 10px;
                    box-shadow: 0 10px 30px rgba(0,0,0,0.3);
                    z-index: 10000;
                    opacity: 0;
                    transform: translateX(100%);
                    transition: all 0.3s ease;
                    max-width: 300px;
                ">
                    <i class="fas ${typeIcons[type]} me-2"></i>
                    <span>${message}</span>
                    <button type="button" class="btn-close btn-close-white ms-2" aria-label="Close"></button>
                </div>
            `);
            
            $('body').append(notification);
            
            // Show notification
            setTimeout(() => {
                notification.css({
                    opacity: 1,
                    transform: 'translateX(0)'
                });
            }, 100);
            
            // Auto hide after 4 seconds
            setTimeout(() => {
                hideNotification(notification);
            }, 4000);
            
            // Close button functionality
            notification.find('.btn-close').click(() => {
                hideNotification(notification);
            });
        }
        
        function hideNotification(notification) {
            notification.css({
                opacity: 0,
                transform: 'translateX(100%)'
            });
            
            setTimeout(() => {
                notification.remove();
            }, 300);
        }
        
        // Keyboard shortcuts
        $(document).keydown(function(e) {
            switch(e.which) {
                case 32: // Spacebar - play/pause
                    e.preventDefault();
                    $('.btn-play-enhanced').click();
                    break;
                case 70: // F - fullscreen
                    if (e.ctrlKey) {
                        e.preventDefault();
                        $('#toggleFullscreen').click();
                    }
                    break;
                case 83: // S - share
                    if (e.ctrlKey) {
                        e.preventDefault();
                        $('#shareMovie').click();
                    }
                    break;
            }
        });
        
        // Touch gestures for mobile
        let touchStartX = 0;
        let touchStartY = 0;
        
        $(document).on('touchstart', function(e) {
            touchStartX = e.originalEvent.touches[0].clientX;
            touchStartY = e.originalEvent.touches[0].clientY;
        });
        
        $(document).on('touchend', function(e) {
            const touchEndX = e.originalEvent.changedTouches[0].clientX;
            const touchEndY = e.originalEvent.changedTouches[0].clientY;
            const deltaX = touchEndX - touchStartX;
            const deltaY = touchEndY - touchStartY;
            
            // Swipe gestures
            if (Math.abs(deltaX) > Math.abs(deltaY) && Math.abs(deltaX) > 50) {
                if (deltaX > 0) {
                    // Swipe right - previous episode
                    console.log('Swipe right');
                } else {
                    // Swipe left - next episode
                    console.log('Swipe left');
                }
            }
        });
    </script>
