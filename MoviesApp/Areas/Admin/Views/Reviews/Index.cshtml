@model IEnumerable<MoviesApp.Models.BinhLuan>

@{
    ViewData["Title"] = "Đánh giá & Bình luận";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4>Quản lý Bình luận</h4>
        <p class="text-muted">Tổng: @ViewBag.TotalComments bình luận</p>
    </div>
    <div>
        <a href="@Url.Action("Ratings")" class="btn btn-admin-primary">
            <i class="fas fa-star me-2"></i>Quản lý Đánh giá
        </a>
    </div>
</div>

<div class="admin-card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Người dùng</th>
                        <th>Phim</th>
                        <th>Nội dung</th>
                        <th>Ngày bình luận</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var comment in Model)
                    {
                        <tr>
                            <td>
                                <strong>@comment.NguoiDung?.TenND</strong><br>
                                <small class="text-muted">@comment.NguoiDung?.Email</small>
                            </td>
                            <td>
                                <strong>@comment.TapPhim?.Phim?.TenPhim</strong><br>
                                <small class="text-muted">Tập @comment.TapPhim?.SoTap</small>
                            </td>
                            <td>
                                <div style="max-width: 300px; overflow: hidden; text-overflow: ellipsis;">
                                    @comment.NoiDung
                                </div>
                            </td>
                            <td>
                                @comment.NgayBL.ToString("dd/MM/yyyy HH:mm")
                            </td>
                            <td>
                                <button class="btn btn-sm btn-info me-1" onclick="viewComment('@comment.MaBL')">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="btn btn-sm btn-danger" onclick="deleteComment('@comment.MaBL')" 
                                        title="Xóa bình luận">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Pagination">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>

<!-- Comment Details Modal -->
<div class="modal fade" id="commentModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chi tiết bình luận</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="commentModalBody">
                <!-- Content will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function viewComment(commentId) {
            $.get('@Url.Action("CommentDetails")/' + commentId, function(data) {
                $('#commentModalBody').html(data);
                $('#commentModal').modal('show');
            });
        }

        function deleteComment(commentId) {
            if (confirm('Bạn có chắc chắn muốn xóa bình luận này?')) {
                $.post('@Url.Action("DeleteComment")', { id: commentId }, function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert(response.message);
                    }
                });
            }
        }
    </script>
}
