@model IEnumerable<MoviesApp.Models.DanhGia>

@{
    ViewData["Title"] = "Quản lý Đánh giá";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4>Quản lý Đánh giá</h4>
        <p class="text-muted">Tổng: @ViewBag.TotalRatings đánh giá</p>
    </div>
    <div>
        <a href="@Url.Action("Index")" class="btn btn-outline-primary">
            <i class="fas fa-comments me-2"></i>Về Bình luận
        </a>
    </div>
</div>

<div class="admin-card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Người dùng</th>
                        <th>Phim</th>
                        <th>Điểm đánh giá</th>
                        <th>Ngày đánh giá</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rating in Model)
                    {
                        <tr>
                            <td>
                                <strong>@rating.NguoiDung?.TenND</strong><br>
                                <small class="text-muted">@rating.NguoiDung?.Email</small>
                            </td>
                            <td>
                                <strong>@rating.TapPhim?.Phim?.TenPhim</strong><br>
                                <small class="text-muted">Tập @rating.TapPhim?.SoTap</small>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-warning text-dark me-2">@rating.DiemDG/10</span>
                                    <div>
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            @if (i <= (rating.DiemDG / 2))
                                            {
                                                <i class="fas fa-star text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star text-warning"></i>
                                            }
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>
                                @rating.ThoiGianDG.ToString("dd/MM/yyyy HH:mm")
                            </td>
                            <td>
                                <button class="btn btn-sm btn-danger" onclick="deleteRating('@rating.MaDG')" 
                                        title="Xóa đánh giá">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Pagination">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Ratings", new { page = i })">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>

@section Scripts {
    <script>
        function deleteRating(ratingId) {
            if (confirm('Bạn có chắc chắn muốn xóa đánh giá này?')) {
                $.post('@Url.Action("DeleteRating")', { id: ratingId }, function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert(response.message);
                    }
                });
            }
        }
    </script>
}
