@model MoviesApp.Models.BinhLuan

<div class="row">
    <div class="col-md-4">
        <h6 class="text-muted">Thông tin người dùng</h6>
        <p><strong>Tên:</strong> @Model.NguoiDung?.TenND</p>
        <p><strong>Email:</strong> @Model.NguoiDung?.Email</p>
    </div>
    <div class="col-md-8">
        <h6 class="text-muted">Thông tin phim</h6>
        <p><strong>Phim:</strong> @Model.TapPhim?.Phim?.TenPhim</p>
        <p><strong>Tập:</strong> @Model.TapPhim?.SoTap</p>
    </div>
</div>

<hr>

<div class="row">
    <div class="col-12">
        <h6 class="text-muted">Nội dung bình luận</h6>
        <div class="border p-3 bg-light">
            @Model.NoiDung
        </div>
    </div>
</div>

<hr>

<div class="row">
    <div class="col-12">
        <p class="text-muted mb-0">
            <i class="fas fa-clock me-1"></i>
            Ngày bình luận: @Model.NgayBL.ToString("dd/MM/yyyy HH:mm:ss")
        </p>
    </div>
</div>
