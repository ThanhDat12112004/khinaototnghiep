@model ForgotPasswordDto
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
}

<div class="auth-container">
    <div class="auth-content">
        <div class="auth-card">
            <div class="auth-logo">
                <h1><i class="fas fa-film me-2"></i>MoviesApp</h1>
                <p>Khôi phục mật khẩu</p>
            </div>
            
            <h2 class="auth-title">Quên mật khẩu?</h2>
            <p class="text-light text-center mb-4">
                Nhập email của bạn để nhận liên kết đặt lại mật khẩu
            </p>
            
            @if (!string.IsNullOrEmpty(TempData["Error"]?.ToString()))
            {
                <div class="alert-auth">
                    <i class="fas fa-exclamation-triangle alert-icon"></i>
                    @TempData["Error"]
                </div>
            }
            
            @if (!string.IsNullOrEmpty(TempData["Success"]?.ToString()))
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle alert-icon"></i>
                    @TempData["Success"]
                </div>
            }
            
            <form asp-action="ForgotPassword" method="post" id="forgotPasswordForm">
                <div asp-validation-summary="All" class="text-danger"></div>
                
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <label asp-for="Email">Email</label>
                    <span asp-validation-for="Email" class="field-validation-error"></span>
                </div>
                
                <button type="submit" class="btn-auth" id="forgotPasswordBtn">
                    <span id="forgotPasswordText">Gửi liên kết đặt lại</span>
                    <span id="forgotPasswordSpinner" class="loading-spinner d-none"></span>
                </button>
            </form>
            
            <div class="auth-links">
                <p class="text-light mb-0 text-center">
                    <a asp-action="Login" class="auth-link">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại đăng nhập
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/auth.js"></script>
}
